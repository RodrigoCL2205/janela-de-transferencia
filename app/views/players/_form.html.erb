<div class='form-group p-3 justify-content-center'>
    <%= simple_form_for (@player) do |f| %>
      <div class='form-group'>
        <%= f.input :name, label: 'Nome do jogador' %>
      </div>
      <div class='form-group'>
        <%= f.input :position, label: 'Posição de campo', collection: ['Goleiro', 'Lateral esquerdo', 'Lateral direito', 'Zagueiro', 'Volante', 'Meia', 'Atacante'] %>
      </div>
      <div class='row'>
        <div class='form-group col-6'>
          <%= f.input :age, label: 'Idade' %>
          </div>
        <div class='form-group col-6'>
          <%= f.input :price, label: 'Preço' %>
        </div>
      </div>
      <div class='form-group my'>
        <%= f.input :photo, as: :file, label: 'Foto'%>
      </div>
      <div class='row justify-content-center'>
        <%= f.submit 'Criar jogador', class: "btn btn-primary btn-default m-3" %>
      </div>
    <% end %>
</div>
