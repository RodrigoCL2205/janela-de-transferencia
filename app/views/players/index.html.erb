<h2>Jogadores Ã  Venda</h2>

<%# Lista personalizada  %>

<ul class="list-group">

  <% @players.each do |player| %>

    <li class="list-group-item d-flex justify-content-between align-items-center">

      <div class="d-flex">
        <div>
          <%=  player.photo.attached? ? (cl_image_tag player.photo.key, crop: :fill, size: "40x40", class: "rounded-circle") : image_tag("player.png", size: "40x40", class: "rounded-circle") %>
        </div>
        <div>
          <h4><%= link_to player.name, player_path(player) %></h4>
        </div>
      </div>

      <div>
        <p><%= player.price %></p>
      </div>

      <div class="align-self-end">
          <%= link_to 'Comprar', player_deals_path(player, current_user), method: "post", class: "badge badge-success" %>
      </div>
    </li>
  <% end %>
</ul>
